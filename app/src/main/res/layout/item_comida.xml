<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHotel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/color_caja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen del plato -->
        <ImageView
            android:id="@+id/ivComidaImage"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <!-- Nombre del plato -->
        <TextView
            android:id="@+id/tvComidaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Nombre del plato"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descripción del plato -->
        <TextView
            android:id="@+id/tvComidaDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Anotación del plato..."
            android:textSize="14sp" />

        <!-- Botones de acción (uno al lado del otro, alineados a la derecha) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="8dp">

        <!-- Sin fondo -->
        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/editar" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete" />

    </LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>
