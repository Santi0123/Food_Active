<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHoteles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/color_caja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen del plato -->
        <ImageView
            android:id="@+id/ivComidaImage"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <!-- Nombre del plato -->
        <TextView
            android:id="@+id/tvComidaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Nombre del plato"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Descripción del plato -->
        <TextView
            android:id="@+id/tvComidaDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Anotación del plato..."
            android:textSize="14sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
