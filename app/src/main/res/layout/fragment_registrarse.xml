<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_de_la_aplicacion"
    tools:context=".ui.views.activities.Registrarse">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="314dp"
        android:layout_height="538dp"
        android:layout_gravity="center"
        android:layout_margin="80dp"
        app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:backgroundTint="@android:color/white">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="247dp"
                android:layout_height="173dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/foto_principal" />

            <!-- Título -->
            <TextView
                android:id="@+id/text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Registro"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <!-- Correo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_mod_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white2"
                    android:hint="Correo:"
                    android:inputType="text"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textModPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white2"
                    android:hint="Contraseña:"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirmar Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmar_contrasenna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white2"
                    android:hint="Repite la contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceptar términos y condiciones"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón de registrarse -->
    <Button
        android:id="@+id/aceptar_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:background="@drawable/boton_selector"
        android:text="Registrarse"
        app:backgroundTint="@null" />

    </FrameLayout>
