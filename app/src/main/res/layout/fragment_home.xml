<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_de_la_aplicacion">

    <!-- Primer CardView: Video -->

    <!-- Segundo CardView: Información del usuario -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUserInfo"
        android:layout_width="216dp"
        android:layout_height="315dp"
        android:layout_margin="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/color_caja"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612">

        <!-- LinearLayout con la información del usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="485dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="216dp"
                android:layout_height="153dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/foto_principal" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Santiago"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comienza tu aventura"
                android:textColor="#9E9494"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="265dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113">

        <!-- Video centrado dentro del CardView -->

        <!-- Botón para omitir debajo del video -->


        <!-- LinearLayout centrado con el VideoView y el Button -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="327dp"
            android:layout_height="209dp"
            app:layout_constraintWidth_percent="0.8" />

        <Button
            android:id="@+id/btnOmitir"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="@color/design_default_color_error"
            android:text="Omitir"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
