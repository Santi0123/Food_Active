<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fondo_de_la_aplicacion"
    tools:context=".fragment.ComidaActFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comida"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_agregar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="642dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="29dp"
        android:text="Agregar comida"
        android:textColor="@color/black"
        app:backgroundTint="@color/boton_agragar"
        app:cornerRadius="16dp"
        app:iconGravity="start"
        app:iconPadding="10dp"
        app:strokeColor="@color/boton_agragar"
        app:strokeWidth="1dp" />

</RelativeLayout>
